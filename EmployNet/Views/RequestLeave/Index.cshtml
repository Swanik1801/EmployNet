@model IEnumerable<EmployNet.Models.Leave>

@{
    ViewData["Title"] = "My Leave Requests";
}

<h2 class="text-center mb-5">My Leave Requests</h2>

<!-- Table to display a list of leave requests -->
<table class="table">
    <thead>
        <tr>
            <!-- Column headers for the leave request table -->
            <th>Leave Type</th>
            <th>Reason</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leave in Model)
        {
            <tr>
                <!-- Displaying the Leave Type -->
                <td>@leave.LeaveType</td>

                <!-- Displaying the Reason for the leave request -->
                <td>@leave.Reason</td>

                <!-- Displaying the Start Date of the leave -->
                <td>@leave.StartDate.ToString("yyyy-MM-dd")</td>

                <!-- Displaying the End Date of the leave -->
                <td>@leave.EndDate.ToString("yyyy-MM-dd")</td>

                <!-- Displaying the Status of the leave request -->
                <td>@leave.Status</td>
            </tr>
        }
    </tbody>
</table>
