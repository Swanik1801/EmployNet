@model LeaveDto

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Request Leave</h2>

        <!-- Leave request form -->
        <form method="post">

            <!-- Leave Type Selection -->
            <div class="row mb-3">
                <label asp-for="LeaveType" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <select asp-for="LeaveType" class="form-control">
                        <option value="" disabled selected>-- Select Leave Type --</option>
                        <option value="PL">Privilege Leave</option>
                        <option value="CL">Casual Leave</option>
                        <option value="SL">Sick Leave</option>
                        <option value="ML">Maternity Leave</option>
                    </select>
                    <span asp-validation-for="LeaveType" class="text-danger"></span>
                </div>
            </div>

            <!-- Reason for Leave -->
            <div class="row mb-3">
                <label asp-for="Reason" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Reason" />
                    <span asp-validation-for="Reason" class="text-danger"></span>
                </div>
            </div>

            <!-- Start Date -->
            <div class="row mb-3">
                <label asp-for="StartDate" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="StartDate" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
            </div>

            <!-- End Date -->
            <div class="row mb-3">
                <label asp-for="EndDate" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="EndDate" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>

            <!-- Submit and Cancel Buttons -->
            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <!-- Submit button for the form -->
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <!-- Cancel button to navigate back to the Employee index -->
                    <a class="btn btn-secondary" asp-controller="Employee" asp-action="Index" role="button">
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
