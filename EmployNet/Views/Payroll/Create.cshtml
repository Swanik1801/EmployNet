@model EmployNet.Models.PayrollDto

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">New Payroll</h2>

        <form asp-action="Create" method="post">
            <!-- Display validation errors if any -->
            @if (ViewData.ModelState.Values.Any(v => v.Errors.Any()))
            {
                <div class="alert alert-danger">
                    @foreach (var state in ViewData.ModelState.Values)
                    {
                        foreach (var error in state.Errors)
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    }
                </div>
            }

            <!-- Employee ID field -->
            <div class="row mb-3">
                <label asp-for="EmployeeId" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="EmployeeId" />
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>
            </div>

            <!-- Base Salary field -->
            <div class="row mb-3">
                <label asp-for="BaseSalary" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="BaseSalary" />
                    <span asp-validation-for="BaseSalary" class="text-danger"></span>
                </div>
            </div>

            <!-- Bonus field -->
            <div class="row mb-3">
                <label asp-for="Bonus" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Bonus" />
                    <span asp-validation-for="Bonus" class="text-danger"></span>
                </div>
            </div>

            <!-- Deductions field -->
            <div class="row mb-3">
                <label asp-for="Deductions" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Deductions" />
                    <span asp-validation-for="Deductions" class="text-danger"></span>
                </div>
            </div>

            <!-- Pay Date field -->
            <div class="row mb-3">
                <label asp-for="PayDate" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="PayDate" />
                    <span asp-validation-for="PayDate" class="text-danger"></span>
                </div>
            </div>

            <!-- Submit and Cancel buttons -->
            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Payroll" asp-action="Index" role="button">
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        // Render client-side validation scripts
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
